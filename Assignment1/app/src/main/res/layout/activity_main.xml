<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="640dp" android:layout_width="match_parent" android:textSize="80sp" android:textColor="#000000" android:text="@string/_0" android:gravity="center" android:background="#4CAF50" android:layout_weight="0.9" android:id="@+id/textcount"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="0.0">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="36sp" android:text="+" android:background="#2196F3" android:layout_weight="0.25" android:id="@+id/add" android:layout_gravity="center"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="36sp" android:text="-" android:background="#E91E63" android:layout_weight="0.25" android:id="@+id/sub" android:layout_gravity="center"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="22sp" android:text="reset" android:background="#FFEB3B" android:layout_weight="0.25" android:id="@+id/reset" android:layout_gravity="center"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp" android:text="toast" android:background="#FF5722" android:layout_weight="0.25" android:id="@+id/toast" android:layout_gravity="center" android:onClick="display"/>

</LinearLayout>

</LinearLayout>
